<header class="headerEdit">
    <a href="/day?date={{dateSave}}" class="btn-cute btn-back">VOLTAR</a>
    <h1>EDITANDO ANOTAÇÃO DO DIA {{dateShow}}</h1>

    <form action="/edit/{{diaries.id}}/{{dateSave}}?_method=PATCH" method="POST">
        <button type="submit" class="btn-cute btn-save">SALVAR</button>
    </form>
</header>

<div class="editBox">

    <!-- Caixa do título -->
    <div class="titleEditBox">
        <div class="titleEditHeader">
            <h2>Título</h2>
            <div class="buttonsTitleNote">
                <span></span><span></span><span></span>
            </div>
        </div>

        <input type="text" name="title" value="{{diaries.title}}" class="inputTitleEdit" form="formEdit" required>
    </div>

    <!-- Caixa do texto -->
    <div class="textEditBox">
        <div class="textEditHeader">
            <h2>Texto</h2>
            <div class="buttonsTitleNote">
                <span></span><span></span><span></span>
            </div>
        </div>

        <textarea 
            name="text"
            class="textareaEdit"
            form="formEdit"
            required
        >{{diaries.text}}</textarea>
    </div>

</div>

<!-- formulário invisível usado pelos inputs -->
<form id="formEdit" action="/edit/{{diaries.id}}/{{dateSave}}?_method=PATCH" method="POST">

</form>

