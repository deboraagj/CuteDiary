<div class="page-container">

    <h2 class="page-title">Nova Anotação para {{dateShow}}</h2>

    <form action="/add" method="POST" class="form-box">

        <input type="hidden" name="date" value="{{dateSave}}">

        {{#if error}}
            <p style="color:#ff4b4b; font-size:1.4rem; text-align:center;">{{error}}</p>
        {{/if}}

        <label for="title">Título:</label>
        <input type="text" id="title" name="title" value="{{title}}" required>

        <label for="text">Anotação:</label>
        <textarea id="text" name="text" required>{{text}}</textarea>

        <button type="submit">Salvar Anotação</button>
    </form>

    <a href="/day?date={{dateSave}}" class="link-back">Voltar</a>

</div>
