<div class="create-container">

    <header class="create-header">
        <a href="/day?date={{dateSave}}" class="btn-cute btn-back">VOLTAR</a>
        <h1 class="create-title-header">NOVA ANOTAÇÃO PARA O DIA {{dateShow}}</h1>
        <button type="submit" form="formCreate" class=" btn-cute btn-save">SALVAR</button>
    </header>

    <div class="create-content">

        <!-- Caixa do título -->
        <div class="create-box-title">
            <div class="create-box-title-header">
                <h2 class="create-box-title-text">Título</h2>
                <div class="create-dots">
                    <span></span><span></span><span></span>
                </div>
            </div>

            <input type="text" id="title" name="title" class="create-input-title" value="{{title}}" form="formCreate" required>
        </div>

        <!-- Caixa do texto -->
        <div class="create-box-text">
            <div class="create-box-text-header">
                <h2 class="create-box-text-title">ANOTAÇÃO</h2>
                <div class="create-dots">
                    <span></span><span></span><span></span>
                </div>
            </div>

            <textarea id="text" name="text" class="create-textarea" form="formCreate" required>{{text}}</textarea>
        </div>
    </div>

    <!-- Form real invisível -->
    <form id="formCreate" action="/add" method="POST">
        <input type="hidden" name="date" value="{{dateSave}}">
    </form>

</div>

