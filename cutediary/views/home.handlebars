{{!-- PÁGINA PRINCIPAL --}}

<header class="headerHome">
    <h1>NEM TODOS OS DIAS, MAS MEU QUERIDO DIÁRIO</h1>
    <button class="btn-menu"><img src="/icons/bar.png" alt=""></button>
</header>

<div class="containerAll">

<div class="emotions">
    {{!-- EMOJIS --}}
<h2>COMO VOCÊ ESTÁ HOJE?</h2>
    <div class="emojis">
        <button class="emojiEmotion">
            <h3>FELIZ</h3>
            <img src="/images/happy.png" alt="">
        </button>
         <button class="emojiEmotion">
            <h3>ENTEDIADO(A)</h3>
            <img src="/images/boredom.png" alt="">
        </button>
         <button class="emojiEmotion">
             <h3>TRISTE</h3>
            <img src="/images/sad.png" alt="">
        </button>
    </div>

    {{!-- JANELA --}}

    <div class="window">
        <div class="window-top">
            <div class="stars star1"></div>
            <div class="buttons">
                <span></span><span></span><span></span>
            </div>
        </div>

        <div class="window-body">
            <p id="motivation-text"></p>
            <div class="stars star2"></div>
        </div>
    </div>
</div>

    {{!-- CALENDÁRIO --}}

    <div id="calendar">
        <div class="headerCalendar">
            <button id="prev-month">&lt;</button>
            <div id="month-year"></div>
            <button id="next-month">&gt;</button>
        </div>

        <div class="weekdays">
            <div>Dom</div>
            <div>Seg</div>
            <div>Ter</div>
            <div>Qua</div>
            <div>Qui</div>
            <div>Sex</div>
            <div id="divSaturday">Sáb</div>
        </div>
        <div id="days"></div>
    </div>

</div>